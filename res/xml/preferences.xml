<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_login">
        <CheckBoxPreference
            android:key="pref_auto_login_enabled"
            android:title="@string/pref_auto_login_enabled_title"
            android:summaryOn="@string/pref_auto_login_enabled_summary_on"
            android:summaryOff="@string/pref_auto_login_enabled_summary_off"
            android:defaultValue="true"/>
        <ListPreference
            android:key="pref_login_retry_count"
            android:title="@string/pref_login_retry_count_title"
            android:summary="@string/pref_login_retry_count_summary"
            android:entries="@array/pref_login_retry_count_entries"
            android:entryValues="@array/pref_login_retry_count_values"
            android:defaultValue="2"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_notifications">
        <CheckBoxPreference
            android:key="pref_enable_status_notifications"
            android:title="@string/pref_enable_status_notifications_title"
            android:summaryOn="@string/pref_enable_status_notifications_summary_on"
            android:summaryOff="@string/pref_enable_status_notifications_summary_off"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_use_toast_messages"
            android:title="@string/pref_use_toast_messages_title"
            android:dependency="pref_enable_status_notifications"
            android:summaryOn="@string/pref_use_toast_messages_summary_on"
            android:summaryOff="@string/pref_use_toast_messages_summary_off"
            android:defaultValue="true"/>
        <MultiSelectListPreference
            android:key="pref_enabled_toast_messages"
            android:dependency="pref_use_toast_messages"
            android:title="@string/pref_enabled_toast_messages_title"
            android:summary="@string/pref_enabled_toast_messages_summary"
            android:entries="@array/pref_enabled_toast_messages_entries"
            android:entryValues="@array/pref_enabled_toast_messages_values"
            android:defaultValue="@array/pref_enabled_toast_messages_default_values"/>
        <CheckBoxPreference
            android:key="pref_show_retry_notification"
            android:title="@string/pref_show_retry_notification_title"
            android:summaryOn="@string/pref_show_retry_notification_summary_on"
            android:summaryOff="@string/pref_show_retry_notification_summary_off"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_network_scanner">
        <CheckBoxPreference
            android:key="pref_show_shs_only"
            android:title="@string/pref_show_shs_only_title"
            android:summaryOn="@string/pref_show_shs_only_summary_on"
            android:summaryOff="@string/pref_show_shs_only_summary_off"
            android:defaultValue="false"/>
        <ListPreference
            android:key="pref_scan_rate"
            android:title="@string/pref_scan_rate_title"
            android:summary="@string/pref_scan_rate_summary"
            android:entries="@array/pref_scan_rate_entries"
            android:entryValues="@array/pref_scan_rate_values"
            android:defaultValue="2"/>
        <ListPreference
            android:key="pref_minimum_signal_strength"
            android:title="@string/pref_minimum_signal_strength_title"
            android:summary="@string/pref_minimum_signal_strength_summary"
            android:entries="@array/pref_minimum_signal_strength_entries"
            android:entryValues="@array/pref_minimum_signal_strength_values"
            android:defaultValue="-80"/>
    </PreferenceCategory>
</PreferenceScreen>