<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_login">
        <ListPreference
            android:key="pref_login_status_check_interval"
            android:title="@string/pref_login_status_check_interval_title"
            android:summary="@string/pref_login_status_check_interval_summary"
            android:entries="@array/pref_login_status_check_interval_entries"
            android:entryValues="@array/pref_login_status_check_interval_values"
            android:defaultValue="60"/>
        <ListPreference
            android:key="pref_login_retry_count"
            android:title="@string/pref_login_retry_count_title"
            android:summary="@string/pref_login_retry_count_summary"
            android:entries="@array/pref_login_retry_count_entries"
            android:entryValues="@array/pref_login_retry_count_values"
            android:defaultValue="2"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_notifications">
        <CheckBoxPreference
            android:key="pref_show_login_prompt"
            android:title="@string/pref_show_login_prompt_title"
            android:summaryOn="@string/pref_show_login_prompt_summary_on"
            android:summaryOff="@string/pref_show_login_prompt_summary_off"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_show_progress_notification"
            android:title="@string/pref_show_progress_notification_title"
            android:summaryOn="@string/pref_show_progress_notification_summary_on"
            android:summaryOff="@string/pref_show_progress_notification_summary_off"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="pref_show_error_notification"
            android:title="@string/pref_show_error_notification_title"
            android:summaryOn="@string/pref_show_error_notification_summary_on"
            android:summaryOff="@string/pref_show_error_notification_summary_off"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_network_scanner">
        <CheckBoxPreference
            android:key="pref_show_shs_only"
            android:title="@string/pref_show_shs_only_title"
            android:summaryOn="@string/pref_show_shs_only_summary_on"
            android:summaryOff="@string/pref_show_shs_only_summary_off"
            android:defaultValue="false"/>
        <ListPreference
            android:key="pref_scan_rate"
            android:title="@string/pref_scan_rate_title"
            android:summary="@string/pref_scan_rate_summary"
            android:entries="@array/pref_scan_rate_entries"
            android:entryValues="@array/pref_scan_rate_values"
            android:defaultValue="5"/>
        <ListPreference
            android:key="pref_minimum_signal_strength"
            android:title="@string/pref_minimum_signal_strength_title"
            android:summary="@string/pref_minimum_signal_strength_summary"
            android:entries="@array/pref_minimum_signal_strength_entries"
            android:entryValues="@array/pref_minimum_signal_strength_values"
            android:defaultValue="-80"/>
    </PreferenceCategory>
</PreferenceScreen>