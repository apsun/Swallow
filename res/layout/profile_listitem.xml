<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dp">
    <CheckBox
        android:id="@+id/profile_enabled_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:checked="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"/>
    <TextView
        android:id="@+id/profile_detail_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/profile_enabled_checkbox"
        android:layout_toEndOf="@+id/profile_enabled_checkbox"
        android:singleLine="true"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/profile_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/profile_detail_textview"
        android:layout_toRightOf="@+id/profile_enabled_checkbox"
        android:layout_toEndOf="@+id/profile_enabled_checkbox"
        android:singleLine="true"
        android:textSize="20sp"/>
</RelativeLayout>