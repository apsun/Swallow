<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oxycode.swallow"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <application android:theme="@android:style/Theme.Holo"
                 android:label="@string/app_name"
                 android:icon="@drawable/icon"
                 android:allowBackup="true">
        <activity
            android:name="com.oxycode.swallow.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.oxycode.swallow.ProfileManagerActivity"
            android:label="@string/profile_manager">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oxycode.swallow.MainActivity"/>
        </activity>
        <activity
            android:name="com.oxycode.swallow.ProfileEditorActivity"
            android:label="@string/profile_editor"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oxycode.swallow.ProfileManagerActivity"/>
        </activity>
        <activity
            android:name="com.oxycode.swallow.SettingsActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oxycode.swallow.MainActivity"/>
        </activity>
        <receiver
            android:name="com.oxycode.swallow.WifiStateReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.wifi.supplicant.STATE_CHANGE"/>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
            </intent-filter>
        </receiver>
        <service
            android:name="com.oxycode.swallow.LoginService">
        </service>
        <provider android:authorities="com.oxycode.swallow.provider.NetworkProfileProvider"
                  android:name=".provider.NetworkProfileProvider" />
    </application>
</manifest>
